
<h2>Train Name: <%= @train.name %></h2>

<h3>Train cities</h3>

  <% if @train.cities %>
    <ul>
      <% @train.cities.each do |cities| %>
        <li><a href="/trains/<%= @train.id %>/cities/<%= cities.id %>"><%= cities.name %></a></li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no cities listed for this train yet.</p>
  <% end %>

<h4>Add a cities:</h4>

<form action="/trains/<%= @train.id %>/cities" method="post">
  <div class="form-group">
    <label for="cities_name">cities name</label>
    <input id="cities_name" name="cities_name" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Add cities</button>
</form>



<p><a href="/trains/<%= @train.id %>/edit">Edit train</a></p>
<p><a href="/trains">Return to train list</a></p>
